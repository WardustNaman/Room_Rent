<p id="notice"><%= notice %></p>

<h1>Amenities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amenities.each do |amenity| %>
      <tr>
        <td><%= link_to amenity.name, amenity %></td>
        <td><%= amenity.description %></td>
        <% if (user_signed_in?) && (can? :create, Amenity.new)%>
        <td><%= link_to 'Edit', edit_amenity_path(amenity) %></td>
        <td><%= link_to 'Destroy', amenity, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if (user_signed_in?) && (can? :create, Amenity.new) %>
<%= link_to 'New Amenity', new_amenity_path %>
<% end %>