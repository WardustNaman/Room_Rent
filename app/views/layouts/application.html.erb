<!DOCTYPE html>
<html>
  <head>
    <title>RoomRent</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
    <b>welcome! <%= current_user.username %></b>
  <% if (user_signed_in?) && (current_user.role? "host") && (current_user.role? "admin")%>
   <%= link_to "My Rooms", rooms_my_rooms_path %> | <%= link_to "Unconfirmed Bookings", bookings_unconfirmed_bookings_path %>
  <% end %>
  <% if (user_signed_in?) && (current_user.role? "admin") %>
   <%= link_to "Amenities", amenities_path %> | <b><%= link_to "Unauthorized rooms", rooms_unauthorized_rooms_path %></b>
  <% end %>
     | <%= link_to "My Bookings", bookings_path %> |
    <%= link_to "Account Setting", edit_user_registration_path %> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete %> |
  <% else %>
    <%= link_to "Register", new_user_registration_path %> |
    <%= link_to "Login", new_user_session_path %> |
<% end %>
     <%= link_to "Rooms", rooms_path %> | <%= link_to "Cities", cities_path %> |
  	<%= link_to "Home", say_hello_path %> |
 	  <%= link_to "Google", "http://www.google.com", :target => "_blank" %> |
    <%= link_to "Gmail", "http://www.gmail.com", :target => "_blank" %> |
    <%= link_to "DCT", "http://www.dctacademy.com", :target => "_blank" %>
  	<br/>

  	<%= notice %>
  	<%= alert %>

    <%= yield %>
  </body>
</html>
